# AgentBond Environment Configuration
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# ---- Database ----
# Defaults to SQLite (agentbond.db) if not set. Use Postgres for production.
# DATABASE_URL=postgresql+asyncpg://agentbond:agentbond@localhost:5432/agentbond
# DATABASE_URL_SYNC=postgresql://agentbond:agentbond@localhost:5432/agentbond

# ---- OpenGradient Network ----
OG_PRIVATE_KEY=0xYOUR_PRIVATE_KEY
OG_RPC_URL=https://ogevmdevnet.opengradient.ai
CHAIN_ID=10740

# ---- Contract Deployment ----
DEPLOYER_PRIVATE_KEY=0xYOUR_DEPLOYER_KEY
RESOLVER_ADDRESS=0xYOUR_RESOLVER_ADDRESS

# ---- Deployed Contract Addresses ----
# Set these after running: python scripts/deploy.py
AGENT_REGISTRY_ADDRESS=
POLICY_REGISTRY_ADDRESS=
WARRANTY_POOL_ADDRESS=
CLAIM_MANAGER_ADDRESS=
